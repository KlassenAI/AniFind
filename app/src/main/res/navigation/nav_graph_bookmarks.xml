<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_bookmarks"
    app:startDestination="@id/bookmarksFragment">
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="com.android.anifind.presentation.ui.bookmarks.BookmarksFragment"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_bookmarksFragment_to_bookmarksAnimeFragment"
            app:destination="@id/bookmarksAnimeFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookmarksAnimeFragment"
        android:name="com.android.anifind.presentation.ui.anime.BookmarksAnimeFragment"
        tools:layout="@layout/fragment_anime" >
        <action
            android:id="@+id/action_bookmarksAnimeFragment_to_relatedFragment"
            app:destination="@id/relatedFragment" />
        <action
            android:id="@+id/action_bookmarksAnimeFragment_to_similarFragment"
            app:destination="@id/similarFragment" />
    </fragment>
    <fragment
        android:id="@+id/similarFragment"
        android:name="com.android.anifind.presentation.ui.anime.SimilarFragment"
        android:label="fragment_similar"
        tools:layout="@layout/fragment_similar" />
    <fragment
        android:id="@+id/relatedFragment"
        android:name="com.android.anifind.presentation.ui.anime.RelatedFragment"
        android:label="fragment_related"
        tools:layout="@layout/fragment_related" />
</navigation>